{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "Path": "/var/lib/elrondHerotagCreator/app_{0:yyyy}-{0:MM}-{0:dd}.log",
      "Append": true,
      "MinLevel": "Warning", // min level for the file logger
      "FileSizeLimitBytes": 5000000, // use to activate rolling file behaviour
      "MaxRollingFiles": 10 // use to specify max number of log files
    }
  },
  "AllowedHosts": "*",
  "TelegramBotToken": "SECRET-TOKEN"
}
